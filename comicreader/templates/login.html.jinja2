{% extends "layout.html.jinja2" %}
{% block title %}Login{% endblock %}
{% block content %}
<div class="row">
  <div class="col l9">
    <h1>Login</h1>
    <p class="flow-text">Please authenticate your credentials with DeviantArt to login.</p>
    <div class="card-panel teal">
      <div class="center-align">
        <form action="login" method="POST">
          <button type="submit" id="login" class="waves-effect waves-light btn-large teal accent-4"><i class="fa fa-deviantart" aria-hidden="true"></i> DeviantArt</button>
        </form>
        <div class="progress" id="progress" style="display: none;">
            <div class="indeterminate"></div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block scripts %}
<script>
  $( "#login" ).click(function() {
    $(this).addClass( "disabled" );
    $("#progress").css({"display": ""})
  });
</script>
{% endblock %}
