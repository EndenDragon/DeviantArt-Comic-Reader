{% extends "layout.html.jinja2" %}
{% block title %}Create{% endblock %}
{% block content %}
<div class="row">
  <div class="col l9">
    <h1>Create</h1>
    <p class="flow-text">Start creating your own DeviantArt comic reader!</p>
  </div>
  <div class="col s12 m12 l12">
    <div class="card-panel teal">
      <nav>
        <div class="nav-wrapper z-depth-2">
          <div class="input-field">
            <input id="search-deviantart" type="search" class="search" name="url" placeholder="http://www.deviantart.com/" autocomplete="off" title="Please note, the browser might hang when uploading a large favorite/gallery.">
            <label for="search-deviantart"><i class="mdi mdi-deviantart"></i></label>
          </div>
        </div>
      </nav>
      <div class="progress" id="progressbar" style="opacity: 0;">
          <div class="indeterminate"></div>
      </div>
      <br>
      <hr>
<div class="row" id="sortable">


</div>
    </div>
  </div>
</div>


<script id="hidden-template" type="text/x-custom-template">
{% raw %}
    <div class="col s12 m6 l2 ui-state-default" imageid="{{id}}">
          <div class="card hoverable">
            <div class="card-image waves-effect waves-block waves-light">
              <div class="deviant-preview">
                <img src="{{src}}">
              </div>
            </div>
            <div class="card-content">
              <span class="card-title-small truncate"><a href="{{url}}" title="{{title}}" target="_blank">{{title}}</a></span>
              <p>By <a href="//{{author}}.deviantart.com" target="_blank">{{author}}</a></p>
            </div>
          </div>
    </div>
{% endraw %}
</script>

{% endblock %}
{% block scripts %}
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
<script src="/static/vendor/js/jquery.ui.touch-punch.min.js"></script>
<script src="/static/js/create.js"></script>
{% endblock %}
